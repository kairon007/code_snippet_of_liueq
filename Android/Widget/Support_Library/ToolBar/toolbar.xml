<!--
     Title: Toolbar
     Tag: toobar, actionbar, appbar
     Update: 2015/07/08
     Description: Toolbar的一些常用参数-->

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" # Toolbar上弹出菜单的主题
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" # Toolbar 本身的主题，主要是字体颜色，菜单按钮默认颜色等
    />
